<div class="container">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :postcode,'Postal code' %><br />
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
  </div>

  <div class="field">
    <%= f.label :prefecture_code, 'Prefecture Code' %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { prompt: '選択してください' }, autofocus: true, autocomplete: "prefecture_code" %>
  </div>

  <div class="field">
    <%= f.label :address_city, 'City' %><br />
    <%= f.text_field :address_city, autofocus: true, autocomplete: "address_city" %>
  </div>

  <div class="field">
    <%= f.label :address_street, 'Street' %><br />
    <%= f.text_field :address_street, autofocus: true, autocomplete: "address_street" %>
  </div>

  <div class="field">
    <%= f.label :address_building, 'Building' %><br />
    <%= f.text_field :address_building, autofocus: true, autocomplete: "address_building" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
<% end %>
<br>
<br>
<%= render "devise/shared/links" %>
</div>

